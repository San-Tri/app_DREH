<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#555">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sección Dispositivo en mantenimiento -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#444"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar dispositivo en mantenimiento"
                    android:textSize="16sp"
                    android:textColor="#FFA500"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo de dispositivo"
                    android:background="@drawable/input_style"
                    android:padding="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editTextMarca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Marca"
                    android:background="@drawable/input_style"
                    android:padding="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editTextModelo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Modelo"
                    android:background="@drawable/input_style"
                    android:padding="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección Usuario Encargado -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#444"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario encargado del equipo"
                    android:textSize="16sp"
                    android:textColor="#FFA500"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del encargado"
                    android:background="@drawable/input_style"
                    android:padding="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editTextCargo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cargo"
                    android:background="@drawable/input_style"
                    android:padding="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editTextArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Área"
                    android:background="@drawable/input_style"
                    android:padding="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección Estado del Mantenimiento -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#444"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado del mantenimiento"
                    android:textSize="16sp"
                    android:textColor="#FFA500"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextTipoMantenimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo de mantenimiento"
                    android:background="@drawable/input_style"
                    android:padding="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editTextEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Estado del mantenimiento"
                    android:background="@drawable/input_style"
                    android:padding="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E90FF"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>